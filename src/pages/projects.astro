---
import BaseLayout from '../layouts/BaseLayout.astro';

const projects = [
  {
    title: "Chatter",
    description: "A privacy-first chat platform with Signal Protocol encryption, Sealed Sender for metadata protection, anonymous inbox with ephemeral mailboxes, and local AI that never leaves your device.",
    tech: ["Go", "React 19", "TypeScript", "Signal Protocol", "LiveKit"],
    github: "",
    live: "/chatter-waitlist",
    liveLabel: "Join Waitlist",
    icon: "blackhole"
  },
  {
    title: "Spotify Tray for Wayland",
    description: "A native system tray application for Spotify on Wayland/Hyprland. Scroll to change tracks, middle-click to pause, click to minimize to tray. Built after discovering Linux desktop integration requires five different subsystems.",
    tech: ["Go", "D-Bus", "MPRIS", "Wayland", "Hyprland"],
    github: "https://github.com/xander1421/spotify-tray-wayland",
    live: "https://aur.archlinux.org/packages/spotify-tray-wayland-bin",
    liveLabel: "AUR Package",
    icon: "spotify"
  },
  {
    title: "YouTube Tab-Fullscreen",
    description: "A lightweight browser extension that adds Twitch-style tab-fullscreen mode to YouTube. Hide all distractions and focus on your content with a keyboard shortcut (Alt+T) or a single click. Works seamlessly with YouTube's single-page app navigation.",
    tech: ["TypeScript", "Browser Extension", "Chrome", "Firefox"],
    github: "https://github.com/xander1421/yt-fs",
    live: "https://chromewebstore.google.com/detail/youtube-tab-fullscreen/bnbdnciheeakalkoppaiilolfgoojibj",
    liveLabel: "Chrome Store",
    live2: "https://addons.mozilla.org/en-US/firefox/addon/youtube-tab-fullscreen/",
    live2Label: "Firefox Add-ons",
    icon: "youtube"
  },
  {
    title: "The Resonant Grave",
    description: "A dark science fiction saga where consciousness is currency and harmony has a price. An interactive web narrative featuring atmospheric effects, glitch aesthetics, and immersive storytelling.",
    tech: ["JavaScript", "CSS", "Interactive Fiction", "Vercel"],
    github: "https://github.com/xander1421/resonant-grave",
    live: "https://resonant-grave.vercel.app/",
    liveLabel: "Read Story",
    icon: "book"
  }
];
---

<BaseLayout title="Projects" description="Open source projects and tools I've built">
  <div class="projects-container">
    <div class="projects-header">
      <h1>Projects</h1>
      <p class="subtitle">Tools and extensions I've built</p>
    </div>

    <div class="projects-grid">
      {projects.map((project, index) => (
        <article class="project-card">
          <div class="project-header">
            <div class={`project-icon ${project.icon}`}>
              {project.icon === "blackhole" && (
                <svg viewBox="0 0 60 60" width="36" height="36">
                  <defs>
                    <radialGradient id="bh-void2" cx="50%" cy="50%" r="50%">
                      <stop offset="0%" stop-color="#000000"/>
                      <stop offset="85%" stop-color="#000000"/>
                      <stop offset="100%" stop-color="#0a0a15"/>
                    </radialGradient>
                    <radialGradient id="bh-photon-glow2" cx="50%" cy="50%" r="50%">
                      <stop offset="60%" stop-color="transparent"/>
                      <stop offset="75%" stop-color="rgba(240,147,251,0.3)"/>
                      <stop offset="90%" stop-color="rgba(118,75,162,0.5)"/>
                      <stop offset="100%" stop-color="transparent"/>
                    </radialGradient>
                    <linearGradient id="bh-disk-front2" x1="0%" y1="0%" x2="100%" y2="0%">
                      <stop offset="0%" stop-color="#f093fb"/>
                      <stop offset="20%" stop-color="#ec4899"/>
                      <stop offset="50%" stop-color="#a855f7"/>
                      <stop offset="80%" stop-color="#667eea"/>
                      <stop offset="100%" stop-color="#764ba2"/>
                    </linearGradient>
                    <linearGradient id="bh-lensed-top2" x1="0%" y1="100%" x2="100%" y2="100%">
                      <stop offset="0%" stop-color="#764ba2" stop-opacity="0.2"/>
                      <stop offset="30%" stop-color="#f093fb" stop-opacity="0.9"/>
                      <stop offset="50%" stop-color="#ec4899" stop-opacity="1"/>
                      <stop offset="70%" stop-color="#f093fb" stop-opacity="0.9"/>
                      <stop offset="100%" stop-color="#667eea" stop-opacity="0.2"/>
                    </linearGradient>
                    <filter id="bh-glow-strong2" x="-50%" y="-50%" width="200%" height="200%">
                      <feGaussianBlur stdDeviation="2" result="blur"/>
                      <feMerge>
                        <feMergeNode in="blur"/>
                        <feMergeNode in="blur"/>
                        <feMergeNode in="SourceGraphic"/>
                      </feMerge>
                    </filter>
                    <filter id="bh-glow-soft2" x="-50%" y="-50%" width="200%" height="200%">
                      <feGaussianBlur stdDeviation="1.2" result="blur"/>
                      <feMerge>
                        <feMergeNode in="blur"/>
                        <feMergeNode in="SourceGraphic"/>
                      </feMerge>
                    </filter>
                    <clipPath id="bh-clip-back2">
                      <rect x="0" y="30" width="60" height="30"/>
                    </clipPath>
                    <clipPath id="bh-clip-front2">
                      <rect x="0" y="0" width="60" height="30"/>
                    </clipPath>
                  </defs>
                  <circle cx="8" cy="12" r="0.5" fill="#ffffff" opacity="0.6"/>
                  <circle cx="52" cy="8" r="0.4" fill="#ffffff" opacity="0.5"/>
                  <circle cx="48" cy="45" r="0.5" fill="#ffffff" opacity="0.4"/>
                  <circle cx="12" cy="48" r="0.4" fill="#ffffff" opacity="0.5"/>
                  <ellipse cx="30" cy="30" rx="22" ry="10" fill="none" stroke="#764ba2" stroke-width="8" opacity="0.15" filter="url(#bh-glow-strong2)"/>
                  <ellipse cx="30" cy="30" rx="24" ry="9" fill="none" stroke="url(#bh-disk-front2)" stroke-width="3" opacity="0.3" clip-path="url(#bh-clip-back2)"/>
                  <path d="M 10 30 Q 30 2 50 30" fill="none" stroke="url(#bh-lensed-top2)" stroke-width="2.5" filter="url(#bh-glow-soft2)" opacity="0.9"/>
                  <circle cx="30" cy="30" r="12" fill="url(#bh-photon-glow2)"/>
                  <circle cx="30" cy="30" r="8" fill="url(#bh-void2)"/>
                  <circle cx="30" cy="30" r="8.5" fill="none" stroke="#f093fb" stroke-width="0.8" opacity="0.7" filter="url(#bh-glow-soft2)"/>
                  <ellipse cx="30" cy="30" rx="24" ry="9" fill="none" stroke="url(#bh-disk-front2)" stroke-width="4" filter="url(#bh-glow-strong2)" clip-path="url(#bh-clip-front2)"/>
                  <ellipse cx="30" cy="30" rx="14" ry="5" fill="none" stroke="#f093fb" stroke-width="1.5" opacity="0.6" filter="url(#bh-glow-soft2)" clip-path="url(#bh-clip-front2)"/>
                  <ellipse cx="22" cy="29" rx="6" ry="2" fill="#ffffff" opacity="0.15" filter="url(#bh-glow-soft2)"/>
                </svg>
              )}
              {project.icon === "book" && (
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="32" height="32">
                  <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
                  <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
                  <path d="M8 7h8M8 11h6"/>
                </svg>
              )}
              {project.icon === "youtube" && (
                <svg viewBox="0 0 24 24" fill="currentColor" width="32" height="32">
                  <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/>
                </svg>
              )}
              {project.icon === "spotify" && (
                <svg viewBox="0 0 24 24" fill="currentColor" width="32" height="32">
                  <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
                </svg>
              )}
            </div>
            <h2 class="project-title">{project.title}</h2>
          </div>

          <p class="project-description">{project.description}</p>

          <div class="project-tech">
            {project.tech.map((tech, i) => (
              <span class={`tech-tag tag-${i % 5}`}>{tech}</span>
            ))}
          </div>

          <div class="project-links">
            {project.github && (
            <a href={project.github} target="_blank" rel="noopener" class="project-link github-link">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              Source Code
            </a>
            )}
            {project.live && (
              <a href={project.live} target={project.live.startsWith('/') ? '_self' : '_blank'} rel={project.live.startsWith('/') ? '' : 'noopener'} class="project-link live-link">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                  <polyline points="15 3 21 3 21 9"/>
                  <line x1="10" y1="14" x2="21" y2="3"/>
                </svg>
                {project.liveLabel || "Live Demo"}
              </a>
            )}
            {project.live2 && (
              <a href={project.live2} target="_blank" rel="noopener" class="project-link live-link">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                  <polyline points="15 3 21 3 21 9"/>
                  <line x1="10" y1="14" x2="21" y2="3"/>
                </svg>
                {project.live2Label || "Live Demo"}
              </a>
            )}
          </div>
        </article>
      ))}
    </div>
  </div>
</BaseLayout>

<style>
  .projects-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }

  .projects-header {
    text-align: center;
    margin-bottom: 4rem;
    padding-bottom: 2.5rem;
    border-bottom: 2px solid rgba(0, 255, 204, 0.2);
  }

  .projects-header h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    color: var(--color-primary);
  }

  .subtitle {
    font-size: 1.2rem;
    color: var(--color-text-dim);
    font-family: 'Share Tech Mono', monospace;
  }

  .projects-grid {
    display: grid;
    gap: 2.5rem;
  }

  .project-card {
    background: rgba(18, 18, 18, 0.5);
    border: 2px solid rgba(0, 255, 204, 0.15);
    border-left: 4px solid var(--color-primary);
    padding: 2.5rem;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .project-card:hover {
    border-color: var(--color-primary);
    background: rgba(18, 18, 18, 0.7);
    transform: translateX(5px);
  }

  .project-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.2rem;
  }

  .project-icon {
    flex-shrink: 0;
    opacity: 0.9;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .project-icon.youtube {
    color: #ff0000;
  }

  .project-icon.spotify {
    color: #1db954;
  }

  .project-icon.book {
    color: var(--color-primary);
  }

  .project-icon.blackhole {
    color: #a78bfa;
  }

  .project-card:hover .project-icon {
    opacity: 1;
  }

  .project-title {
    font-size: 1.8rem;
    margin: 0;
    color: var(--color-primary);
    line-height: 1.3;
  }

  .project-description {
    color: var(--color-text-dim);
    line-height: 1.7;
    margin-bottom: 1.5rem;
    font-size: 1.05rem;
  }

  .project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.6rem;
    margin-bottom: 2rem;
  }

  .tech-tag {
    padding: 0.3rem 0.8rem;
    font-family: 'Share Tech Mono', monospace;
    font-size: 0.75rem;
    letter-spacing: 0.03em;
    transition: all 0.3s ease;
  }

  .tag-0 {
    background: rgba(0, 255, 204, 0.08);
    border: 1px solid rgba(0, 255, 204, 0.3);
    color: #00ffcc;
  }

  .tag-1 {
    background: rgba(255, 0, 110, 0.08);
    border: 1px solid rgba(255, 0, 110, 0.3);
    color: #ff006e;
  }

  .tag-2 {
    background: rgba(255, 183, 0, 0.08);
    border: 1px solid rgba(255, 183, 0, 0.3);
    color: #ffb700;
  }

  .tag-3 {
    background: rgba(168, 85, 247, 0.08);
    border: 1px solid rgba(168, 85, 247, 0.3);
    color: #b580ff;
  }

  .tag-4 {
    background: rgba(0, 191, 255, 0.08);
    border: 1px solid rgba(0, 191, 255, 0.3);
    color: #00bfff;
  }

  .project-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .project-link {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    font-family: 'Share Tech Mono', monospace;
    font-size: 0.95rem;
    text-decoration: none;
    padding: 0.6rem 1.2rem;
    border: 1px solid;
    transition: all 0.3s ease;
  }

  .github-link {
    color: var(--color-text);
    border-color: rgba(255, 255, 255, 0.2);
    background: rgba(255, 255, 255, 0.05);
  }

  .github-link:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.4);
    transform: translateY(-2px);
  }

  .live-link {
    color: var(--color-primary);
    border-color: rgba(0, 255, 204, 0.3);
    background: rgba(0, 255, 204, 0.05);
  }

  .live-link:hover {
    background: rgba(0, 255, 204, 0.15);
    border-color: var(--color-primary);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .projects-container {
      padding: 1.5rem 1rem;
    }

    .projects-header h1 {
      font-size: 2.5rem;
    }

    .subtitle {
      font-size: 1.1rem;
    }

    .project-title {
      font-size: 1.5rem;
    }

    .project-card {
      padding: 2rem 1.5rem;
    }

    .project-card:hover {
      transform: translateX(3px);
    }

    .project-links {
      flex-direction: column;
    }

    .project-link {
      justify-content: center;
    }
  }
</style>
