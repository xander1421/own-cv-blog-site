---
import BaseLayout from '../layouts/BaseLayout.astro';

const projects = [
  {
    title: "Chatter",
    description: "A privacy-first chat platform with Signal Protocol encryption, Sealed Sender for metadata protection, anonymous inbox with ephemeral mailboxes, and local AI that never leaves your device.",
    tech: ["Go", "React 19", "TypeScript", "Signal Protocol", "LiveKit"],
    github: "",
    live: "/chatter-waitlist",
    liveLabel: "Join Waitlist",
    icon: "chat"
  },
  {
    title: "YouTube Tab-Fullscreen",
    description: "A lightweight browser extension that adds Twitch-style tab-fullscreen mode to YouTube. Hide all distractions and focus on your content with a keyboard shortcut (Alt+T) or a single click. Works seamlessly with YouTube's single-page app navigation.",
    tech: ["TypeScript", "Browser Extension", "Chrome", "Firefox"],
    github: "https://github.com/xander1421/yt-fs",
    live: "https://chromewebstore.google.com/detail/youtube-tab-fullscreen/bnbdnciheeakalkoppaiilolfgoojibj",
    liveLabel: "Chrome Store",
    icon: "youtube"
  },
  {
    title: "The Resonant Grave",
    description: "A dark science fiction saga where consciousness is currency and harmony has a price. An interactive web narrative featuring atmospheric effects, glitch aesthetics, and immersive storytelling.",
    tech: ["JavaScript", "CSS", "Interactive Fiction", "Vercel"],
    github: "https://github.com/xander1421/resonant-grave",
    live: "https://resonant-grave.vercel.app/",
    liveLabel: "Read Story",
    icon: "book"
  }
];
---

<BaseLayout title="Projects" description="Open source projects and tools I've built">
  <div class="projects-container">
    <div class="projects-header">
      <h1>Projects</h1>
      <p class="subtitle">Tools and extensions I've built</p>
    </div>

    <div class="projects-grid">
      {projects.map((project, index) => (
        <article class="project-card">
          <div class={`project-icon ${project.icon}`}>
            {project.icon === "chat" && (
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="40" height="40">
                <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"/>
                <path d="M8 12h.01M12 12h.01M16 12h.01"/>
              </svg>
            )}
            {project.icon === "book" && (
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="40" height="40">
                <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
                <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
                <path d="M8 7h8M8 11h6"/>
              </svg>
            )}
            {project.icon === "youtube" && (
              <svg viewBox="0 0 24 24" fill="currentColor" width="40" height="40">
                <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/>
              </svg>
            )}
          </div>

          <h2 class="project-title">{project.title}</h2>

          <p class="project-description">{project.description}</p>

          <div class="project-tech">
            {project.tech.map((tech, i) => (
              <span class={`tech-tag tag-${i % 5}`}>{tech}</span>
            ))}
          </div>

          <div class="project-links">
            {project.github && (
            <a href={project.github} target="_blank" rel="noopener" class="project-link github-link">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              Source Code
            </a>
            )}
            {project.live && (
              <a href={project.live} target={project.live.startsWith('/') ? '_self' : '_blank'} rel={project.live.startsWith('/') ? '' : 'noopener'} class="project-link live-link">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                  <polyline points="15 3 21 3 21 9"/>
                  <line x1="10" y1="14" x2="21" y2="3"/>
                </svg>
                {project.liveLabel || "Live Demo"}
              </a>
            )}
          </div>
        </article>
      ))}
    </div>
  </div>
</BaseLayout>

<style>
  .projects-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }

  .projects-header {
    text-align: center;
    margin-bottom: 4rem;
    padding-bottom: 2.5rem;
    border-bottom: 2px solid rgba(0, 255, 204, 0.2);
  }

  .projects-header h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    color: var(--color-primary);
  }

  .subtitle {
    font-size: 1.2rem;
    color: var(--color-text-dim);
    font-family: 'Share Tech Mono', monospace;
  }

  .projects-grid {
    display: grid;
    gap: 2.5rem;
  }

  .project-card {
    background: rgba(18, 18, 18, 0.5);
    border: 2px solid rgba(0, 255, 204, 0.15);
    border-left: 4px solid var(--color-primary);
    padding: 2.5rem;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .project-card:hover {
    border-color: var(--color-primary);
    background: rgba(18, 18, 18, 0.7);
    transform: translateX(5px);
  }

  .project-icon {
    margin-bottom: 1.5rem;
    opacity: 0.9;
  }

  .project-icon.youtube {
    color: #ff0000;
  }

  .project-icon.book {
    color: var(--color-primary);
  }

  .project-icon.chat {
    color: #a78bfa;
  }

  .project-card:hover .project-icon {
    opacity: 1;
  }

  .project-title {
    font-size: 1.8rem;
    margin-bottom: 1.2rem;
    color: var(--color-primary);
    line-height: 1.3;
  }

  .project-description {
    color: var(--color-text-dim);
    line-height: 1.7;
    margin-bottom: 1.5rem;
    font-size: 1.05rem;
  }

  .project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.6rem;
    margin-bottom: 2rem;
  }

  .tech-tag {
    padding: 0.3rem 0.8rem;
    font-family: 'Share Tech Mono', monospace;
    font-size: 0.75rem;
    letter-spacing: 0.03em;
    transition: all 0.3s ease;
  }

  .tag-0 {
    background: rgba(0, 255, 204, 0.08);
    border: 1px solid rgba(0, 255, 204, 0.3);
    color: #00ffcc;
  }

  .tag-1 {
    background: rgba(255, 0, 110, 0.08);
    border: 1px solid rgba(255, 0, 110, 0.3);
    color: #ff006e;
  }

  .tag-2 {
    background: rgba(255, 183, 0, 0.08);
    border: 1px solid rgba(255, 183, 0, 0.3);
    color: #ffb700;
  }

  .tag-3 {
    background: rgba(168, 85, 247, 0.08);
    border: 1px solid rgba(168, 85, 247, 0.3);
    color: #b580ff;
  }

  .tag-4 {
    background: rgba(0, 191, 255, 0.08);
    border: 1px solid rgba(0, 191, 255, 0.3);
    color: #00bfff;
  }

  .project-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .project-link {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    font-family: 'Share Tech Mono', monospace;
    font-size: 0.95rem;
    text-decoration: none;
    padding: 0.6rem 1.2rem;
    border: 1px solid;
    transition: all 0.3s ease;
  }

  .github-link {
    color: var(--color-text);
    border-color: rgba(255, 255, 255, 0.2);
    background: rgba(255, 255, 255, 0.05);
  }

  .github-link:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.4);
    transform: translateY(-2px);
  }

  .live-link {
    color: var(--color-primary);
    border-color: rgba(0, 255, 204, 0.3);
    background: rgba(0, 255, 204, 0.05);
  }

  .live-link:hover {
    background: rgba(0, 255, 204, 0.15);
    border-color: var(--color-primary);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .projects-container {
      padding: 1.5rem 1rem;
    }

    .projects-header h1 {
      font-size: 2.5rem;
    }

    .subtitle {
      font-size: 1.1rem;
    }

    .project-title {
      font-size: 1.5rem;
    }

    .project-card {
      padding: 2rem 1.5rem;
    }

    .project-card:hover {
      transform: translateX(3px);
    }

    .project-links {
      flex-direction: column;
    }

    .project-link {
      justify-content: center;
    }
  }
</style>
