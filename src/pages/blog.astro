---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get all blog posts using Astro's content collections API
const allPosts = await getCollection('blog');

// Function to calculate reading time
function calculateReadingTime(content: string): number {
  const plainText = content
    .replace(/```[\s\S]*?```/g, '')
    .replace(/`[^`]*`/g, '')
    .replace(/#{1,6}\s/g, '')
    .replace(/[*_~`]/g, '')
    .replace(/\[([^\]]+)\]\([^)]+\)/g, '$1')
    .replace(/\n+/g, ' ');

  const words = plainText.trim().split(/\s+/).filter(word => word.length > 0);
  const readingTime = Math.ceil(words.length / 200);
  return readingTime;
}

// Sort by date (newest first) and map to include data
const posts = allPosts
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .map(post => ({
    slug: post.slug,
    title: post.data.title,
    date: post.data.date,
    description: post.data.description,
    tags: post.data.tags,
    image: post.data.image,
    readingTime: calculateReadingTime(post.body),
  }));
---

<BaseLayout title="Blog" description="DevOps insights, tutorials, and experiences from the field">
  <div class="blog-container">
    <div class="blog-header">
      <h1>Blog</h1>
      <p class="subtitle">Insights on DevOps, Cloud Infrastructure, and Automation</p>
    </div>

    <div class="posts-grid">
      {posts.length === 0 ? (
        <div class="no-posts">
          <p>No blog posts yet. Check back soon!</p>
        </div>
      ) : (
        posts.map(post => (
          <article class="post-card">
            {post.image && (
              <a href={`/blog/${post.slug}`} class="post-image-link">
                <img src={`/images/blog/${post.image.replace('./', '')}`} alt={post.title} class="post-image" loading="lazy" />
              </a>
            )}
            <div class="post-meta">
              <time datetime={post.date.toISOString()} class="post-date">
                {post.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
              </time>
              <span class="reading-time">• {post.readingTime} min read</span>
            </div>
            <h2 class="post-title">
              <a href={`/blog/${post.slug}`}>{post.title}</a>
            </h2>
            {post.tags && Array.isArray(post.tags) && (
              <div class="tags">
                {post.tags.map((tag: string, index: number) => (
                  <span class={`tag tag-${index % 5}`}>{tag}</span>
                ))}
              </div>
            )}
            <p class="post-description">{post.description}</p>
            <a href={`/blog/${post.slug}`} class="read-more">
              Read Article →
            </a>
          </article>
        ))
      )}
    </div>
  </div>
</BaseLayout>

<style>
  .blog-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }

  .blog-header {
    text-align: center;
    margin-bottom: 4rem;
    padding-bottom: 2.5rem;
    border-bottom: 2px solid rgba(0, 255, 204, 0.2);
  }

  .blog-header h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    color: var(--color-primary);
  }

  .subtitle {
    font-size: 1.2rem;
    color: var(--color-text-dim);
    font-family: 'Share Tech Mono', monospace;
  }

  .posts-grid {
    display: grid;
    gap: 2.5rem;
  }

  .post-card {
    background: rgba(18, 18, 18, 0.5);
    border: 2px solid rgba(0, 255, 204, 0.15);
    border-left: 4px solid var(--color-primary);
    padding: 2.5rem;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .post-card:hover {
    border-color: var(--color-primary);
    background: rgba(18, 18, 18, 0.7);
    transform: translateX(5px);
  }

  .post-image-link {
    display: block;
    margin: -2.5rem -2.5rem 1.5rem -2.5rem;
    overflow: hidden;
  }

  .post-image {
    width: 100%;
    height: 250px;
    object-fit: cover;
    transition: transform 0.3s ease;
    border-bottom: 2px solid rgba(0, 255, 204, 0.2);
  }

  .post-card:hover .post-image {
    transform: scale(1.05);
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .post-date {
    font-family: 'Share Tech Mono', monospace;
    font-size: 0.9rem;
    color: var(--color-text-dim);
  }

  .reading-time {
    font-family: 'Share Tech Mono', monospace;
    font-size: 0.9rem;
    color: var(--color-primary);
    font-weight: 600;
  }

  .post-title {
    margin-bottom: 1.2rem;
    font-size: 1.8rem;
    line-height: 1.3;
  }

  .post-title a {
    color: var(--color-primary);
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .post-title a:hover {
    color: var(--color-text);
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.6rem;
    margin-bottom: 1.2rem;
  }

  .tag {
    padding: 0.3rem 0.8rem;
    font-family: 'Share Tech Mono', monospace;
    font-size: 0.75rem;
    letter-spacing: 0.03em;
    transition: all 0.3s ease;
  }

  /* Colorful tag variants */
