    z-index: 0;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    background-color: var(--color-bg);
    color: var(--color-text);
    font-family: 'Share Tech Mono', monospace;
    line-height: 1.6;
    min-height: 100%;
  }

  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    position: relative;
    overflow-x: hidden;
    margin: 0;
    padding: 0;
  }

  /* Force hardware acceleration and 60fps */
  .neural-network,
  .hologram-grid,
  .scanlines,
  .noise,
  .glitch-overlay,
  .server-rack-bg,
  .cloud-factory,
  .perspective-grid,
  .data-streams {
    -webkit-backface-visibility: hidden;
    -webkit-perspective: 1000;
  }

  /* 80s Anime Noir Server Rack Background */
  .server-rack-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    pointer-events: none;
    z-index: 0;
    opacity: 0.15;
    background-image:
      /* Vertical server rack panels */
      repeating-linear-gradient(
        90deg,
        transparent 0px,
        rgba(150, 100, 255, 0.1) 2px,
        rgba(150, 100, 255, 0.2) 4px,
        transparent 6px,
        transparent 80px
      ),
      /* Horizontal rack segments */
      repeating-linear-gradient(
        0deg,
        transparent 0px,
        rgba(255, 0, 110, 0.05) 1px,
        transparent 2px,
        transparent 40px
      ),
      /* Accent highlights */
      repeating-linear-gradient(
        90deg,
        transparent 0px,
        rgba(0, 255, 204, 0.15) 1px,
        transparent 2px,
        transparent 240px
      );
    filter: blur(4px);
    animation: rackPulse 6s ease-in-out infinite;
  }

  @keyframes rackPulse {
    0%, 100% {
      opacity: 0.15;
    }
    50% {
      opacity: 0.22;
    }
  }

  /* Cloud Factory Infrastructure */
  .cloud-factory {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    pointer-events: none;
    z-index: 0;
    opacity: 0.08;
    background:
      /* Large infrastructure blocks */
      linear-gradient(135deg, transparent 30%, rgba(100, 150, 255, 0.15) 32%, transparent 34%),
      linear-gradient(225deg, transparent 50%, rgba(255, 150, 50, 0.12) 52%, transparent 54%),
      linear-gradient(45deg, transparent 70%, rgba(150, 100, 255, 0.1) 72%, transparent 74%);
    background-size: 400px 400px, 350px 350px, 450px 450px;
    background-position: 0 0, 200px 200px, 100px -100px;
    animation: cloudFactoryShift 60s linear infinite;
  }

  @keyframes cloudFactoryShift {
    0% {
      background-position: 0 0, 200px 200px, 100px -100px;
    }
    100% {
      background-position: 400px 400px, 600px 600px, 500px 300px;
    }
