    box-shadow: 0 0 20px rgba(0, 255, 204, 0.3);
    position: relative;
    z-index: 100;
  }

  nav {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1.5rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    text-decoration: none;
