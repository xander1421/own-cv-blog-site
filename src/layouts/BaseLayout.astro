    position: fixed;
    bottom: 0;
    left: 0;
    width: 100vw;
    height: 60vh;
    pointer-events: none;
    z-index: 0;
    opacity: 0.12;
    background-image:
      /* Horizontal lines converging to vanishing point */
      repeating-linear-gradient(
        0deg,
        transparent,
        transparent calc(5vh - 1px),
        rgba(255, 0, 110, 0.3) calc(5vh - 1px),
        rgba(255, 0, 110, 0.3) 5vh
      );
    transform: perspective(400px) rotateX(45deg);
    transform-origin: bottom center;
  }

  /* Animated Data Streams */
  .data-streams {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    pointer-events: none;
    z-index: 1;
    opacity: 0.06;
    overflow: hidden;
  }

