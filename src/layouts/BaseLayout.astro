---
import { getCollection } from 'astro:content';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  modifiedTime?: string;
  tags?: string[];
  author?: string;
}

const {
  title,
  description = "DevOps Engineer with 4+ years of experience building scalable cloud infrastructures. AWS, Kubernetes, Terraform, CI/CD.",
  image = "/width=3840.webp",
  type = "website",
  publishedTime,
  modifiedTime,
  tags = [],
  author = "Alexandru Pruteanu"
} = Astro.props;

// Get all blog posts for search
const allPosts = await getCollection('blog');
const searchData = allPosts.map(post => ({
  title: post.data.title,
  description: post.data.description,
  slug: post.slug,
  tags: post.data.tags
}));

// SEO metadata
const siteUrl = 'https://alexpruteanu.cloud';
const canonicalURL = new URL(Astro.url.pathname, siteUrl);
const fullTitle = `${title} | Alexandru Pruteanu`;
const imageURL = new URL(image, siteUrl);

// Keywords for SEO (recruiter-focused)
const keywords = [
  'DevOps Engineer',
  'Cloud Infrastructure',
  'AWS',
  'Kubernetes',
  'Terraform',
  'CI/CD',
  'Docker',
  'Infrastructure as Code',
  'Site Reliability Engineering',
  'Alexandru Pruteanu',
  ...tags
].join(', ');
---

