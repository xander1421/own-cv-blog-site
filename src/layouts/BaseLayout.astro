<style is:global>
  :root {
    --color-primary: #00ffcc;
    --color-secondary: #ff006e;
    --color-bg: #0a0a0a;
    --color-surface: #121212;
    --color-text: #e0e0e0;
    --color-text-dim: #808080;
    --color-accent: #ffb700;
  }

  /* Matrix Rain Background */
  .matrix-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    opacity: 0.04;
    pointer-events: none;
  }

  /* Global background gradients */
  body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background:
      radial-gradient(ellipse at center, rgba(0, 255, 204, 0.05) 0%, transparent 70%),
      radial-gradient(circle at 20% 80%, rgba(255, 0, 110, 0.05) 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(255, 183, 0, 0.03) 0%, transparent 50%);
    pointer-events: none;
    z-index: 0;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    background-color: var(--color-bg);
    color: var(--color-text);
    font-family: 'Share Tech Mono', monospace;
    line-height: 1.6;
    min-height: 100%;
  }

  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    position: relative;
    overflow-x: hidden;
    margin: 0;
    padding: 0;
  }

  /* Force hardware acceleration and 60fps */
  .neural-network,
  .hologram-grid,
  .scanlines,
  .noise,
  .glitch-overlay,
  .server-rack-bg,
  .cloud-factory,
  .perspective-grid,
  .data-streams {
    -webkit-backface-visibility: hidden;
    -webkit-perspective: 1000;
  }

  /* 80s Anime Noir Server Rack Background */
  .server-rack-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    pointer-events: none;
    z-index: 0;
    opacity: 0.15;
    background-image:
      /* Vertical server rack panels */
      repeating-linear-gradient(
        90deg,
        transparent 0px,
        rgba(150, 100, 255, 0.1) 2px,
        rgba(150, 100, 255, 0.2) 4px,
        transparent 6px,
        transparent 80px
      ),
      /* Horizontal rack segments */
      repeating-linear-gradient(
        0deg,
        transparent 0px,
        rgba(255, 0, 110, 0.05) 1px,
        transparent 2px,
        transparent 40px
      ),
      /* Accent highlights */
      repeating-linear-gradient(
        90deg,
        transparent 0px,
        rgba(0, 255, 204, 0.15) 1px,
        transparent 2px,
        transparent 240px
      );
    filter: blur(4px);
    animation: rackPulse 6s ease-in-out infinite;
  }

  @keyframes rackPulse {
    0%, 100% {
      opacity: 0.15;
    }
    50% {
      opacity: 0.22;
    }
  }

  /* Cloud Factory Infrastructure */
  .cloud-factory {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    pointer-events: none;
    z-index: 0;
    opacity: 0.08;
    background:
      /* Large infrastructure blocks */
      linear-gradient(135deg, transparent 30%, rgba(100, 150, 255, 0.15) 32%, transparent 34%),
      linear-gradient(225deg, transparent 50%, rgba(255, 150, 50, 0.12) 52%, transparent 54%),
      linear-gradient(45deg, transparent 70%, rgba(150, 100, 255, 0.1) 72%, transparent 74%);
    background-size: 400px 400px, 350px 350px, 450px 450px;
    background-position: 0 0, 200px 200px, 100px -100px;
    animation: cloudFactoryShift 60s linear infinite;
    will-change: transform;
    transform: translateZ(0);
  }

  @keyframes cloudFactoryShift {
    0% {
      background-position: 0 0, 200px 200px, 100px -100px;
    }
    100% {
      background-position: 400px 400px, 600px 600px, 500px 300px;
    }
  }

  /* Perspective Grid - 80s style vanishing point */
  .perspective-grid {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100vw;
    height: 60vh;
    pointer-events: none;
    z-index: 0;
    opacity: 0.12;
    background-image:
      /* Horizontal lines converging to vanishing point */
      repeating-linear-gradient(
        0deg,
        transparent,
        transparent calc(5vh - 1px),
        rgba(255, 0, 110, 0.3) calc(5vh - 1px),
        rgba(255, 0, 110, 0.3) 5vh
      );
    transform: perspective(400px) rotateX(45deg);
    transform-origin: bottom center;
  }

  /* Animated Data Streams */
  .data-streams {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    pointer-events: none;
    z-index: 1;
    opacity: 0.06;
    overflow: hidden;
  }

  .data-streams::before,
  .data-streams::after {
    content: '';
    position: absolute;
    width: 2px;
    height: 100vh;
    background: linear-gradient(
      180deg,
      transparent 0%,
      rgba(0, 255, 204, 0.6) 20%,
      rgba(0, 255, 204, 0.8) 50%,
      rgba(0, 255, 204, 0.6) 80%,
      transparent 100%
    );
    animation: dataStreamFlow 8s linear infinite;
  }

  .data-streams::before {
    left: 15%;
    animation-delay: 0s;
  }

  .data-streams::after {
    right: 25%;
    animation-delay: 4s;
  }

  @keyframes dataStreamFlow {
    0% {
      transform: translateY(-100vh);
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    90% {
      opacity: 1;
    }
    100% {
      transform: translateY(100vh);
      opacity: 0;
    }
  }

  /* Cyber effects (toned down) */
  .scanlines {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    background: repeating-linear-gradient(
      0deg,
      rgba(0, 0, 0, 0.05),
      rgba(0, 0, 0, 0.05) 1px,
      transparent 1px,
      transparent 3px
    );
    z-index: 1000;
    opacity: 0.5;
  }

  .noise {
    display: none;
  }

  /* Header */
  header {
    background: var(--color-surface);
    border-bottom: 1px solid var(--color-primary);
    box-shadow: 0 0 20px rgba(0, 255, 204, 0.3);
    position: relative;
    z-index: 100;
  }

  nav {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1.5rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    text-decoration: none;
    color: var(--color-primary);
    font-family: 'Share Tech Mono', monospace;
    line-height: 1;
  }

  .terminal-prompt {
    font-size: 1.1rem;
    font-weight: 400;
    letter-spacing: 0.02em;
    color: var(--color-primary);
  }

  .terminal-prompt::before {
    content: '';
    display: inline-block;
    width: 8px;
    height: 8px;
    background: var(--color-primary);
    border-radius: 50%;
    margin-right: 0.5rem;
    animation: blink 1.5s infinite;
  }

  @keyframes blink {
    0%, 50% {
      opacity: 1;
    }
    51%, 100% {
      opacity: 0;
    }
  }

  /* Removed heavy glitch effects for better readability */

  /* Neural Network Background - Global (simplified) */
  .neural-network {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    opacity: 0.05;
    background-image:
      linear-gradient(rgba(0, 255, 204, 0.08) 1px, transparent 1px),
      linear-gradient(90deg, rgba(0, 255, 204, 0.08) 1px, transparent 1px);
    background-size: 60px 60px;
    pointer-events: none;
    z-index: 1;
  }

  /* Reduce effects on mobile for performance */
  @media (max-width: 768px) {
    .neural-network,
    .hologram-grid {
      opacity: 0.02;
    }

    .server-rack-bg,
    .cloud-factory,
    .perspective-grid {
      opacity: 0.05;
    }

    .data-streams {
      display: none;
    }
  }

  /* Holographic Grid Effect - Global (subtle) */
  .hologram-grid {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background:
      repeating-linear-gradient(
        0deg,
        transparent,
        transparent 3px,
        rgba(0, 255, 204, 0.015) 3px,
        rgba(0, 255, 204, 0.015) 4px
      );
    pointer-events: none;
    z-index: 2;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .nav-links a {
    color: var(--color-text-dim);
    text-decoration: none;
    font-size: 0.9rem;
    letter-spacing: 0.1em;
    transition: all 0.3s ease;
    position: relative;
  }

  .nav-links a:hover {
    color: var(--color-primary);
    text-shadow: 0 0 10px rgba(0, 255, 204, 0.5);
  }

  .nav-links a::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--color-primary);
    transition: width 0.3s ease;
  }

  .nav-links a:hover::after {
    width: 100%;
  }

  /* Search Button */
  .search-btn {
    background: rgba(0, 255, 204, 0.1);
    border: 1px solid var(--color-primary);
    color: var(--color-primary);
    padding: 0.5rem 1rem;
    border-radius: 4px;
    cursor: pointer;
    font-family: 'Share Tech Mono', monospace;
    font-size: 0.9rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
  }

  .search-btn:hover {
    background: rgba(0, 255, 204, 0.2);
  }

  .search-shortcut {
    font-size: 0.75rem;
    opacity: 0.7;
  }

